<%- include('./partials/header', {title: "Halaman Utama 8ookArt"}) %> 
<%- include('./partials/nav') %> 
<main>
    <div class="filter">
      <%category.forEach(el => {%>
        <a href="/?sort=<%=el.name%>" class="btn btn-warning rounded-1 mt-3 mb-3 pt-0 pb-0"><%=el.name%></a>
      <%});%>

    </div>
    <div class="container-fluid">
        <div class="row">
          
          <!-- left side bar -->
            <div class="col">
 
                <div class="sidebar">
                    <h1>Wellcome To 8ook<span style="color:#ff2525">Art</span>  Social Media</h1>
                   
                      <p>DESKRIPSI WEBSITE INIIIIII</p>
                      <p>Login to be part of us!</p>
                      <a href="/login" class="btn btn-warning">Login</a>
               
                  </div>
            </div>
          <!-- end left side bar -->

          <!-- center bar -->
            <div class="col-6 centerbar mt-5">
                <!-- card -->
                <%post.forEach(el => {%>
                <div class="card mb-3" style="width: 80%;">                    
                    <div class="background-card">
                        <img src="<%=el.imageUrl%>" alt="" width="130%">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title col-10"><%=el.title%></h5>
                        <P>Post By <b><i> <%=el.User.fullName()%> </i></b></P>
                      <p class="card-text"><%=el.description%></p>
                    </div>
                  </div>
                <%});%>
                  <!-- end carde -->
            </div>
            <!-- end center bar -->
            <div class="col">
            </div>
        </div>
    </div>
  </main>

<%- include('./partials/footer') %> 